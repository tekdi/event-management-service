# ===========================================
# Event Management Service Environment Variables
# ===========================================

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=event_management
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_CHARSET=utf8
POSTGRES_COLLATION=C
POSTGRES_SSL=false
POSTGRES_LOGGING=true

# ===========================================
# External Service URLs
# ===========================================
USER_SERVICE=http://localhost:3001/api/users
ATTENDANCE_SERVICE=http://localhost:3002/api/attendance
LMS_SERVICE_URL=http://localhost:4000/lms-service

# ===========================================
# Online Meeting Configuration
# ===========================================
ONLINE_MEETING_ADAPTER=zoom

# ===========================================
# Zoom API Configuration
# ===========================================
# Required for both authentication methods
ZOOM_ACCOUNT_ID=your_zoom_account_id
ZOOM_AUTH_URL=https://zoom.us/oauth/token
ZOOM_PAST_MEETINGS=https://api.zoom.us/v2/report/meetings
ZOOM_PAST_WEBINARS=https://api.zoom.us/v2/report/webinars

# ===========================================
# Authentication Method 1: Server-to-Server OAuth (Recommended)
# ===========================================
# Use these for full functionality including meeting creation
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_API_BASE_URL=https://api.zoom.us/v2
ZOOM_MEETINGS_ENDPOINT=https://api.zoom.us/v2/users/me/meetings
ZOOM_WEBINARS_ENDPOINT=https://api.zoom.us/v2/users/me/webinars

# ===========================================
# Authentication Method 2: Username/Password (Legacy - Limited Functionality)
# ===========================================
# Use these for backward compatibility (read-only operations only)
# ZOOM_USERNAME=your_zoom_username
# ZOOM_PASSWORD=your_zoom_password

# ===========================================
# Application Configuration
# ===========================================
EVENT_CREATION_LIMIT=100
TIMEZONE=Asia/Kolkata
TIMEZONE_OFFSET=330
TIMEZONE_OFFSET_STRING=+05:30

# ===========================================
# Server Configuration
# ===========================================
PORT=3001
NODE_ENV=development

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info

# ===========================================
# Security Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true 